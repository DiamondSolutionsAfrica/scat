#!/bin/sh

URL=$1
KEY=$2

/usr/local/mysql/bin/mysql scat -e "SELECT retail_price, discount_type, discount, (SELECT SUM(allocated) FROM txn_line WHERE item = item.id) stock, code, minimum_quantity FROM item WHERE active AND NOT deleted" > /tmp/prices-$$.txt

curl -F "key=$KEY" -F "prices=@/tmp/prices-$$.txt" $URL

rm /tmp/prices-$$.txt
